#sidebar
  @media mq-normal
    column(sidebar-column)

.widget-wrap
  margin: block-margin 0

.widget-title
  @extend $block-caption

.widget
  color: color-sidebar-text
  text-shadow: 0 1px #fff
  background: color-widget-background
  box-shadow: 0 -1px 4px color-widget-border inset
  border: 1px solid color-widget-border
  padding: 15px
  border-radius: 3px
  a
    color: color-link
    text-decoration: none
    &:hover
      text-decoration: underline
  ul, ol, dl
    ul, ol, dl
      margin-left: 15px
      list-style: disc
	  
.aboutme
  color: black
  /*text-shadow: 0 1px #fff  文字阴影*/
  background: color-widget-background
  box-shadow: 0 -1px 4px color-widget-border inset
  border: 1px solid color-widget-border
  padding: 16px
  border-radius: 3px
  a
    color: red
    text-decoration: none

/*图标设置*/
.aboutme-icon
  @extend $nav-link
  font-family: font-icon
  text-align: center
  font-size: 25px
  width: font-size
  height: font-size
  padding: 10px 20px
  position: relative
  cursor: pointer
  
#ico-google
  &:before
    content: "\f0d5"
#ico-github
  &:before
    content: "\f09b"
#ico-qling
  &:before
    content: "\f06c"